{
  "name": "zfr/zfr-oauth2-server-doctrine",
  "description": "Doctrine 2 adapter for ZfrOAuth2Server",
  "type": "library",
  "license": "MIT",
  "keywords": [
    "doctrine",
    "oauth 2"
  ],
  "homepage": "http://www.github.com/zf-fr/zfr-oauth2-server-doctrine",
  "authors": [
    {
      "name": "MichaÃ«l Gallego",
      "email": "mic.gallego@gmail.com",
      "homepage": "http://www.michaelgallego.fr"
    },
    {
      "name": "Bas Kamer",
      "email": "baskamer@gmail.com",
      "homepage": "https://baskamer.nl"
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": false
    }
  },
  "require": {
    "php": "^7.3",
    "zfr/zfr-oauth2-server": "^0.10",
    "doctrine/orm": "^2.7",
    "psr/container": "^1.0 || ^2.0",
    "roave/security-advisories": "dev-master"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^2.1",
    "laminas/laminas-coding-standard": "^2.4",
    "phpunit/phpunit": "^9.3"
  },
  "autoload": {
    "psr-4": {
      "ZfrOAuth2\\Server\\Doctrine\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "ZfrOAuth2Test\\Server\\Doctrine\\": "test/src/"
    }
  },
  "extra": {
    "branch-alias": {
      "dev-master": "0.3.x-dev"
    }
  },
  "scripts": {
    "check": [
      "@cs-check",
      "@test"
    ],
    "cs-check": "phpcs",
    "cs-fix": "phpcbf",
    "test": "phpunit --colors=always",
    "test-coverage": "phpunit --colors=always --coverage-clover clover.xml"
  }
}
